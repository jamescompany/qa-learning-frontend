# Example Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Application
VITE_APP_NAME=QA Learning App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Interactive learning platform for QA professionals

# Features Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_REALTIME_CHAT=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_TWO_FACTOR_AUTH=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_PAYMENT=false

# Authentication
VITE_AUTH_TOKEN_KEY=accessToken
VITE_AUTH_REFRESH_TOKEN_KEY=refreshToken
VITE_SESSION_TIMEOUT=1800000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# Social Login (Optional)
VITE_GOOGLE_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=
VITE_FACEBOOK_APP_ID=

# Development Settings
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_LOGGER=true
VITE_LOG_LEVEL=debug